<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ebike_light_bg"
    android:orientation="vertical" >
    
	<RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:background="@color/darkcyan"
        android:gravity="center_vertical"
        android:layout_height="@dimen/tile_height" >

        <TextView
            android:id="@+id/provider_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="西湖自行车行"
            android:textSize="@dimen/text_large_size" />
       
        <Button
            android:id="@+id/backBtn"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"     
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_returnback"
            />

    </RelativeLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
        
	    <ImageView
            android:id="@+id/imageView1981"
            android:scaleType="fitXY"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView2"
            android:src="@drawable/img_horizionlinebar" />

	    <TextView
	        android:id="@+id/bikefree_detail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/gray"
	        android:layout_marginLeft="@dimen/text_margin"
	        android:layout_marginTop="@dimen/text_margin"
	        android:textSize="@dimen/text_little_size"
	        android:text="总体评分" />

	    <RatingBar
	        android:id="@+id/userratingBar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:stepSize="1"
	        android:progressDrawable="@drawable/rating_yellow"
	        android:layout_gravity="center"/>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/white"
	        android:orientation="vertical" >
		<ImageView
            android:id="@+id/imageView1441"
            android:scaleType="fitXY"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView2"
            android:src="@drawable/img_horizionlinebar" />
		
	        <EditText
	            android:id="@+id/comment_edittext"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:inputType="textMultiLine"
	            android:minLines="5"
	            android:paddingLeft="@dimen/text_margin"
	            android:background="@null" />
			
	        <ImageView
            android:id="@+id/imageView14413"
            android:scaleType="fitXY"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView2"
            android:src="@drawable/img_horizionlinebar" />
	        
	    </LinearLayout>

	    <Button
		    android:id="@+id/submitBtn"
		    android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
		    android:background="@color/darkcyan"
		    android:textColor="@color/white"
		    android:textSize="@dimen/text_large_size"
		    android:text="发布" />

	</LinearLayout>

</LinearLayout>
