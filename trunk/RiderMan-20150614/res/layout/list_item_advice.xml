<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android1:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="30dp"
        android1:layout_marginLeft="15dp"
        android1:layout_marginRight="15dp"
        android1:layout_marginTop="5dp" >

        <TextView
            android1:id="@+id/username"
            android1:layout_width="60dp"
            android1:layout_height="wrap_content"
            android1:layout_gravity="center_vertical"
            android1:maxEms="10"
            android1:text="Windy"
            android1:textColor="@color/ebike_title_999999"
            android1:textSize="@dimen/text_little_size" />

        <TextView
            android1:id="@+id/usertime"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="center_vertical"
            android1:layout_marginLeft="10dp"
            android1:maxEms="30"
            android1:text="2014-7-16"
            android1:textColor="@color/ebike_title_999999"
            android1:textSize="@dimen/text_little_size" />

    </LinearLayout>

    <RelativeLayout
        android1:layout_width="fill_parent"
        android1:layout_height="wrap_content" >

        <RatingBar
            android1:id="@+id/userratingBar"
            android1:layout_width="wrap_content"
            android1:layout_height="30dp"
            android1:layout_alignParentRight="true"
            android1:isIndicator="true"
            android1:numStars="5"
            android1:progressDrawable="@drawable/rating_yellow"
            android1:rating="2.0"
            android1:scaleX="0.7"
            android1:scaleY="0.7"
            android1:stepSize="0.5" />

    </RelativeLayout>

    <TextView
        android1:id="@+id/usercontent"
        android1:layout_width="fill_parent"
        android1:layout_height="wrap_content"
        android1:layout_marginLeft="15dp"
        android1:layout_marginRight="15dp"
        android1:layout_marginTop="5dp"
        android1:text="评论内容"
        android1:textColor="@color/ebike_title_999999"
        android1:textSize="@dimen/text_little_size" />

    <ImageView
        android1:id="@+id/diviline2"
        android1:layout_width="fill_parent"
        android1:layout_height="1dp"
        android1:layout_marginLeft="10dp"
        android1:layout_marginRight="10dp"
        android1:layout_marginTop="10dp"
        android1:scaleType="fitXY"
        android1:src="@drawable/img_horizionlinebar" />

</LinearLayout>