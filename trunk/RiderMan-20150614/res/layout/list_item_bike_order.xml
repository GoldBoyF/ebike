
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android1="http://schemas.android.com/apk/res/android"
        android1:id="@+id/linearLayoutstoredetail"
        android1:layout_width="fill_parent"
        android1:layout_height="wrap_content"
        android1:layout_marginRight="10dp"
        android1:layout_marginTop="10dp"
        android1:background="@drawable/corner_view_white_side"
        android1:orientation="vertical" >

<!--  android:descendantFocusability="blocksDescendants" -->
        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="30dp" >

            <TextView
                android1:id="@+id/storetitle"
                android1:layout_width="100dp"
                android1:layout_height="wrap_content"
                android1:text="车型："
                android1:textSize="@dimen/text_middle_size" />

            <TextView
                android1:id="@+id/bikesort_detail"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_marginLeft="15dp"
                android1:hint="单人自行车"
                android1:textSize="@dimen/text_middle_size" />
        </LinearLayout>

        <ImageView
            android1:id="@+id/diviline2"
            android1:layout_width="fill_parent"
            android1:layout_height="1dp"
            android1:scaleType="fitXY"
            android1:src="@drawable/img_horizionlinebar" />

        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="30dp"
            android1:layout_marginTop="5dp" >

            <TextView
                android1:id="@+id/storeaddr"
                android1:layout_width="100dp"
                android1:layout_height="wrap_content"
                android1:text="价格："
                android1:textSize="@dimen/text_middle_size" />

            <TextView
                android1:id="@+id/storedistance"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_marginLeft="15dp"
                android1:hint="20"
                android1:textSize="@dimen/text_middle_size" />

            <TextView
                android1:id="@+id/TextView01"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_weight="1"
                android1:hint="元每小时"
                android1:textColor="@color/black"
                android1:textSize="@dimen/text_middle_size" />

        </LinearLayout>

        <ImageView
            android1:id="@+id/ImageView03"
            android1:layout_width="fill_parent"
            android1:layout_height="1dp"
            android1:scaleType="fitXY"
            android1:src="@drawable/img_horizionlinebar" />

        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="match_parent" >

            <TextView
                android1:id="@+id/distancetext"
                android1:layout_width="100dp"
                android1:layout_height="wrap_content"
                android1:layout_gravity="center_vertical"
                android1:text="预定数量："
                android1:textSize="@dimen/text_middle_size" />

            <LinearLayout
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content" >
<!-- 虽然可以用NumberPicker 但是不如直接Button-->

                <Button
                    android1:id="@+id/decrease"
                    android1:layout_width="35dp"
                    android1:layout_height="16dp"
                    android1:layout_gravity="center_vertical"
                    android1:layout_marginLeft="13dp"
                    android1:background="@drawable/selector_desc_icon"
                    android1:focusable="false" />

                <EditText
                    android1:id="@+id/bikenumb"
                    android1:layout_width="wrap_content"
                    android1:layout_height="33dp"
                    android1:layout_marginTop="1dp"
                    android1:enabled="false"
                    android1:gravity="center"
                    android1:hint="1"
                    android1:textColor="@color/darkcyan"
                    android1:textSize="@dimen/text_little_size" />

                <Button
                    android1:id="@+id/increase"
                    android1:layout_width="35dp"
                    android1:layout_height="32dp"
                    android1:layout_gravity="center_vertical"
                    android1:background="@drawable/selector_plus_icon"
                    android1:focusable="false" />

            </LinearLayout>

            <TextView
                android1:id="@+id/allhangzhou"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_gravity="center_vertical"
                android1:layout_marginLeft="5dp"
                android1:text="辆"
                android1:textSize="@dimen/text_middle_size" />

        </LinearLayout>

        <ImageView
            android1:id="@+id/underline_right"
            android1:layout_width="fill_parent"
            android1:layout_height="1dp"
            android1:scaleType="fitXY"
            android1:src="@drawable/img_horizionlinebar" />

    </LinearLayout>
