
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android1="http://schemas.android.com/apk/res/android"
        android1:id="@+id/linearLayout1"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:gravity="center_vertical"
        android1:orientation="vertical" >

        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="85dp"
            android1:layout_marginLeft="15dp"
            android1:layout_marginRight="15dp"
            android1:orientation="horizontal" >

            <ImageView
                android1:id="@+id/imageViewbikeimg"
                android1:layout_width="70dp"
                android1:layout_height="70dp"
                android1:layout_gravity="center_vertical"
                android1:layout_marginBottom="8dp"
                android1:layout_marginTop="8dp"
                android1:src="@drawable/ic_launcher" />

            <LinearLayout
                android1:layout_width="match_parent"
                android1:layout_height="75dp"
                android1:layout_marginLeft="10dp"
                android1:layout_marginTop="7dp"
                android1:orientation="vertical" >

                <TextView
                    android1:id="@+id/bikesort_detail"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:layout_marginBottom="6dp"
                    android1:gravity="center_vertical"
                    android1:text="单人自行车"
                    android1:textColor="@color/ebike_title_444444"
                    android1:textSize="@dimen/text_little_size" />

                <TextView
                    android1:id="@+id/bikeprice_detail"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:layout_marginBottom="1dp"
                    android1:layout_marginTop="1dp"
                    android1:gravity="center_vertical"
                    android1:text="20元/小时"
                    android1:textColor="@color/ebike_title_999999"
                    android1:textSize="@dimen/text_little_size" />

                <TextView
                    android1:id="@+id/bikefree_detail"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:layout_marginTop="2dp"
                    android1:gravity="center_vertical"
                    android1:text="可租100辆，已租80辆"
                    android1:textColor="@color/ebike_title_999999"
                    android1:textSize="@dimen/text_little_size" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android1:id="@+id/diviline2"
            android1:layout_width="fill_parent"
            android1:layout_height="1dp"
            android1:layout_marginLeft="10dp"
            android1:layout_marginRight="10dp"
            android1:layout_marginTop="8dp"
            android1:scaleType="fitXY"
            android1:src="@drawable/img_horizionlinebar" />

    </LinearLayout>
