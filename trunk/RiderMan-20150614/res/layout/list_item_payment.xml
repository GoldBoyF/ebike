 
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android1="http://schemas.android.com/apk/res/android"
        android1:id="@+id/linearLayout1"
        android1:layout_width="fill_parent"
        android1:layout_height="wrap_content"
        android1:orientation="vertical"
        android1:paddingLeft="10dp"
        android1:paddingRight="10dp" >

        <LinearLayout
            android1:layout_width="fill_parent"
            android1:layout_height="30dp"
            android1:layout_marginLeft="5dp"
            android1:layout_marginTop="20dp" >

            <TextView
                android1:id="@+id/storetitle"
                android1:layout_width="100dp"
                android1:layout_height="wrap_content"
                android1:text="车型："
                android1:textColor="@color/ebike_title_444444"
                android1:textSize="@dimen/text_little_size" />

            <TextView
                android1:id="@+id/bikesort_detail"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_marginLeft="15dp"
                android1:hint="单人自行车"
                android1:textColor="@color/ebike_title_999999"
                android1:textSize="@dimen/text_little_size" />

        </LinearLayout>

        <ImageView
            android1:id="@+id/diviline2"
            android1:layout_width="fill_parent"
            android1:layout_height="1dp"
            android1:scaleType="fitXY"
            android1:src="@drawable/img_horizionlinebar" />

        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="30dp"
            android1:layout_marginLeft="5dp"
            android1:layout_marginTop="3dp" >

            <TextView
                android1:id="@+id/distancetext"
                android1:layout_width="100dp"
                android1:layout_height="wrap_content"
                android1:text="数量："
                android1:textColor="@color/ebike_title_444444"
                android1:textSize="@dimen/text_little_size" />

            <TextView
                android1:id="@+id/bikenumb"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_marginLeft="15dp"
                android1:hint="1"
                android1:textColor="@color/black"
                android1:textSize="@dimen/text_little_size" />

            <TextView
                android1:id="@+id/allhangzhou"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_marginLeft="15dp"
                android1:text="辆"
                android1:textColor="@color/ebike_title_999999"
                android1:textSize="@dimen/text_little_size" />

        </LinearLayout>

        <ImageView
            android1:id="@+id/underline_right"
            android1:layout_width="fill_parent"
            android1:layout_height="1dp"
            android1:scaleType="fitXY"
            android1:src="@drawable/img_horizionlinebar" />

        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="30dp"
            android1:layout_marginLeft="5dp"
            android1:layout_marginTop="3dp" >

            <TextView
                android1:id="@+id/listmode"
                android1:layout_width="100dp"
                android1:layout_height="wrap_content"
                android1:text="预定日期："
                android1:textColor="@color/ebike_title_444444"
                android1:textSize="@dimen/text_little_size" />

            <TextView
                android1:id="@+id/booktime"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_marginLeft="15dp"
                android1:hint="2014年7月19日"
                android1:textColor="@color/ebike_title_999999"
                android1:textSize="@dimen/text_little_size" />

        </LinearLayout>

        <ImageView
            android1:id="@+id/ImageView02"
            android1:layout_width="fill_parent"
            android1:layout_height="1dp"
            android1:scaleType="fitXY"
            android1:src="@drawable/img_horizionlinebar" />

        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="30dp"
            android1:layout_marginLeft="5dp"
            android1:layout_marginTop="3dp" >

            <TextView
                android1:id="@+id/TextView08"
                android1:layout_width="100dp"
                android1:layout_height="wrap_content"
                android1:text="预定时段："
                android1:textColor="@color/ebike_title_444444"
                android1:textSize="@dimen/text_little_size" />

            <TextView
                android1:id="@+id/usagetime"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_marginLeft="15dp"
                android1:hint="9：00-11:00"
                android1:textColor="@color/ebike_title_999999"
                android1:textSize="@dimen/text_little_size" />

        </LinearLayout>

        <ImageView
            android1:id="@+id/ImageView03"
            android1:layout_width="fill_parent"
            android1:layout_height="1dp"
            android1:scaleType="fitXY"
            android1:src="@drawable/img_horizionlinebar" />

        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="30dp"
            android1:layout_marginLeft="5dp"
            android1:layout_marginTop="3dp" >

            <TextView
                android1:id="@+id/storeaddr"
                android1:layout_width="100dp"
                android1:layout_height="wrap_content"
                android1:text="价格："
                android1:textColor="@color/ebike_title_444444"
                android1:textSize="@dimen/text_little_size" />

            <TextView
                android1:id="@+id/storedistance"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_marginLeft="15dp"
                android1:hint="20元每小时"
                android1:textColor="@color/ebike_title_999999"
                android1:textSize="@dimen/text_little_size" />

        </LinearLayout>

        <ImageView
            android1:id="@+id/ImageView01"
            android1:layout_width="fill_parent"
            android1:layout_height="1dp"
            android1:scaleType="fitXY"
            android1:src="@drawable/img_horizionlinebar" />
    </LinearLayout>
 