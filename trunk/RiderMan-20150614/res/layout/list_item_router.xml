<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:id="@+id/linearLayoutstoredetail"
    android1:layout_width="fill_parent"
    android1:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android1:orientation="vertical"
    android1:paddingBottom="1dp" >

    <!-- android:descendantFocusability="blocksDescendants" -->

    <ImageView
        android1:id="@+id/imageView1"
        android1:layout_width="fill_parent"
        android1:layout_height="1dp"
        android1:scaleType="centerCrop"
        android1:src="@drawable/img_horizionlinebar" />

    <LinearLayout
        android1:layout_width="fill_parent"
        android1:layout_height="10dp"
        android1:background="@color/ebike_light_bg" >
    </LinearLayout>

    <ImageView
        android1:id="@+id/ImageView01"
        android1:layout_width="fill_parent"
        android1:layout_height="1dp"
        android1:scaleType="centerCrop"
        android1:src="@drawable/img_horizionlinebar" />

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_marginLeft="15dp"
        android1:layout_marginRight="15dp"
        android1:layout_marginTop="10dp"
        android1:focusable="true"
        android1:orientation="vertical" >

        <ImageView
            android1:id="@+id/PicimageView"
            android1:layout_width="fill_parent"
            android1:layout_height="140dp"
            android1:layout_marginBottom="10dp"
            android1:adjustViewBounds="false"
            android1:scaleType="centerCrop"
            android1:src="@drawable/img_xihu" />

        <TextView
            android1:id="@+id/routertitle"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="西湖杨柳一日行"
            android1:textColor="@color/ebike_title_444444"
            android1:textSize="@dimen/text_little_size" />

        <RelativeLayout
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:layout_marginBottom="10dp" >

            <TextView
                android1:id="@+id/routerlocation"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_alignParentLeft="true"
                android1:text="杭州市西湖杨堤87号"
                android1:textColor="@color/ebike_title_999999"
                android1:textSize="@dimen/text_little_size" />

            <TextView
                android1:id="@+id/routerdistance"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_alignParentRight="true"
                android1:layout_alignParentTop="true"
                android1:text="距离：2.2Km"
                android1:textColor="@color/ebike_title_999999"
                android1:textSize="@dimen/text_little_size" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>