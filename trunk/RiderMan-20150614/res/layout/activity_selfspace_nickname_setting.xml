<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ebike_light_bg"
    android:orientation="vertical" >
    
	<RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:background="@color/darkcyan"
        android:paddingRight="@dimen/title_padding"
        android:gravity="center_vertical"
        android:layout_height="@dimen/tile_height" >

        <TextView
            android:id="@+id/bikefree_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/nickname"
            android:textSize="@dimen/text_large_size" />
        
        <Button
            android:id="@+id/saveBtn"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:text="@string/save"
            android:textColor="@drawable/selector_text_click_white"
            android:textSize="@dimen/text_little_size"
            android:background="@color/transparent"/>
        
        <Button
            android:id="@+id/cancelBtn"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"     
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_returnback"
            />

    </RelativeLayout>
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap"
        android:orientation="vertical"
        android:background="@color/white" >

	    <ImageView
            android:id="@+id/imageView1441"
            android:scaleType="fitXY"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView2"
            android:src="@drawable/img_horizionlinebar" />
	    
        <EditText
            android:id="@+id/nickname_edittext"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/input_height"
            android:paddingLeft="@dimen/text_margin"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_little_size"
            android:singleLine="true"
            android:ems="10" 
            android:background="@null">
            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/imageView1442"
            android:scaleType="fitXY"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView2"
            android:src="@drawable/img_horizionlinebar" />
    </LinearLayout>
</LinearLayout>
